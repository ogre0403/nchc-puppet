# .bashrc

# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi


#maven
export PATH=$PATH:<%= scope.lookupvar('nchc::params::maven::mvn_current') %>/bin        #SET_MVN_VAR_BY_PUPPET

#JVM
export JAVA_HOME=<%= scope.lookupvar('nchc::params::java::java_current') %>              # SET_JAVA_VAR_BY_PUPPET
export PATH=$PATH:$JAVA_HOME/bin        # SET_JAVA_VAR_BY_PUPPET
export JRE_HOME=$JAVA_HOME/jre          # SET_JAVA_VAR_BY_PUPPET
export CLASSPATH=.:$JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar:$JRE_HOME/lib/rt.jar # SET_JAVA_VAR_BY_PUPPET

#HADOOP
export HADOOP_HOME=<%= scope.lookupvar('nchc::params::hadoop::hadoop_current') %>     # SET_HADOOP_VAR_BY_PUPPET
export HADOOP_MAPRED_HOME=$HADOOP_HOME                          # SET_HADOOP_VAR_BY_PUPPET
export HADOOP_COMMON_HOME=$HADOOP_HOME                          # SET_HADOOP_VAR_BY_PUPPET
export HADOOP_HDFS_HOME=$HADOOP_HOME                            # SET_HADOOP_VAR_BY_PUPPET
export YARN_HOME=$HADOOP_HOME                                   # SET_HADOOP_VAR_BY_PUPPET
export HADOOP_CONF_DIR=$HADOOP_HOME/etc/hadoop                  # SET_HADOOP_VAR_BY_PUPPET
export YARN_CONF_DIR=$HADOOP_HOME/etc/hadoop                    # SET_HADOOP_VAR_BY_PUPPET
export PATH=$PATH:$HADOOP_HOME/bin:$HADOOP_HOME/sbin            # SET_HADOOP_VAR_BY_PUPPET

#HBase
export HBASE_HOME=<%= scope.lookupvar('nchc::params::hbase::hbase_current') %>  #SET_HBASE_VAR_BY_PUPPET
export PATH=$PATH:$HBASE_HOME/bin                                           #SET_HBASE_VAR_BY_PUPPET

#storm
export STORM_HOME=<%= scope.lookupvar('nchc::params::storm::storm_current') %>  #SET_STORM_VAR_BY_PUPPET
export PATH=$PATH:$STORM_HOME/bin                                           #SET_STORM_VAR_BY_PUPPET
<% if scope.lookupvar('nchc::params::storm::storm_on_yarn') == "yes" %>
export PATH=$PATH:<%= scope.lookupvar('nchc::params::storm::storm_on_yarn_dir') %>/bin      #SET_STORM_VAR_BY_PUPPET
<% end %>

#Zookeeper
export ZK_HOME=<%= scope.lookupvar('nchc::params::zookeeper::zk_current') %>  #SET_ZK_VAR_BY_PUPPET
export PATH=$PATH:$ZK_HOME/bin                                           #SET_ZK_VAR_BY_PUPPET

